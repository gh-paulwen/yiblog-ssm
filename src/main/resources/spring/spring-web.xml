<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc" 
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">
    
    <mvc:resources location="/WEB-INF/static/" mapping="/**" />
    
    <mvc:annotation-driven />
    
    <context:component-scan base-package="me.paul.yiblog_ssm.controller"/>
    
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/" />
        <property name="suffix" value=".jsp" />
    </bean>
    
    <!-- interceptor -->
    <mvc:interceptors>
      <bean id="loadInterceptor" class="me.paul.yiblog_ssm.controller.interceptor.LoadInterceptor" autowire="default"/>
      <mvc:interceptor>
        <mvc:mapping path="/operation"/>
        <mvc:mapping path="/cates"/>
        <mvc:mapping path="/link/pass/*"/>
        <mvc:mapping path="/passage/save"/>
        <mvc:mapping path="/passage/edit/*"/>
        <mvc:mapping path="/upload"/>
        <bean id="adminInterceptor" class="me.paul.yiblog_ssm.controller.interceptor.AdminInterceptor"/>
      </mvc:interceptor>
    </mvc:interceptors>
    
    
    <bean id="passageController" class="me.paul.yiblog_ssm.controller.PassageController">
      <property name="passagePerPage" value="5"/>
    </bean>
    
    <bean id="commonController" class="me.paul.yiblog_ssm.controller.CommonController">
      <property name="passagePerPage" value="5"/>
      
    </bean>
    
    <bean id="fileController" class="me.paul.yiblog_ssm.controller.FileController">
        <property name="imagePath" value="/upload/image/"/>
        <property name="uploadPath" value="/upload/"/>
    </bean>
     
    
</beans>