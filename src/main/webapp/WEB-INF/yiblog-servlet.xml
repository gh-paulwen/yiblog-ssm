<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
 http://www.springframework.org/schema/mvc
 http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
 http://www.springframework.org/schema/context
 http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="me.paul.yiblog_ssh.controller" />

	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<mvc:resources location="/WEB-INF/static/" mapping="/**" />
	<mvc:annotation-driven />

	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>classpath:jdbc.properties</value>
		</property>
	</bean>

	<bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
		<property name="driverClass" value="${driverClass}" />
		<property name="jdbcUrl" value="${url}" />
		<property name="user" value="${username}" />
		<property name="password" value="${password}" />
		<property name="maxPoolSize" value="${maxPoolSize}" />
		<property name="maxIdleTime" value="${maxIdleTime}" />
	</bean>

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:mybatisConfig.xml" />
	</bean>

	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="me.paul.yiblog_ssm.mapper" />
		<property name="sqlSessionFactoryBeanName" value="sqlSessionFactory" />
	</bean>
	
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
	  <property name="defaultEncoding" value="utf-8"/>
	  <property name="maxUploadSize" value="10485760"/>
	  <property name="maxInMemorySize" value="4096"/>
	</bean>
	
	<!-- Mapper -->
	<bean id="userMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="me.paul.yiblog_ssm.mapper.UserMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	<bean id="categoryMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="me.paul.yiblog_ssm.mapper.CategoryMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	<bean id="subCategoryMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="me.paul.yiblog_ssm.mapper.SubCategoryMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	<bean id="passageMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="me.paul.yiblog_ssm.mapper.PassageMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	<bean id="commentMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="me.paul.yiblog_ssm.mapper.CommentMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	<bean id="replyMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="me.paul.yiblog_ssm.mapper.ReplyMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	<bean id="feedbackMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="me.paul.yiblog_ssm.mapper.FeedbackMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	<bean id="announcementMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="me.paul.yiblog_ssm.mapper.AnnouncementMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	<bean id="linkMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="mapperInterface" value="me.paul.yiblog_ssm.mapper.LinkMapper" />
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
	</bean>
	
	
	<!-- interceptor -->
	<mvc:interceptors>
	  <bean id="loadInterceptor" class="me.paul.yiblog_ssm.controller.interceptor.LoadInterceptor">
	    <property name="subCategoryMapper" ref="subCategoryMapper"/>
	    <property name="announcementMapper" ref="announcementMapper"/>
	    <property name="linkMapper" ref="linkMapper"/>
	  </bean>
	  <mvc:interceptor>
	  	<mvc:mapping path="/operation"/>
	    <mvc:mapping path="/cates"/>
	    <mvc:mapping path="/link/pass/*"/>
	    <mvc:mapping path="/passage/save"/>
	    <mvc:mapping path="/passage/edit/*"/>
	    <mvc:mapping path="/upload"/>
	    <bean id="adminInterceptor" class="me.paul.yiblog_ssm.controller.interceptor.AdminInterceptor"/>
	  </mvc:interceptor>
	</mvc:interceptors>

	<!-- Controller -->
	<bean id="userController" class="me.paul.yiblog_ssm.controller.UserController">
		<property name="userMapper" ref="userMapper" />
	</bean>
	<bean id="testController" class="me.paul.yiblog_ssm.controller.TestController">
		<property name="categoryMapper" ref="categoryMapper" />
		<property name="subCategoryMapper" ref="subCategoryMapper" />
		<property name="passageMapper" ref="passageMapper" />
		<property name="commentMapper" ref="commentMapper" />
	</bean>
	<bean id="passageController" class="me.paul.yiblog_ssm.controller.PassageController">
	    <property name="commentMapper" ref="commentMapper"/>
	    <property name="replyMapper" ref="replyMapper"/>
		<property name="passageMapper" ref="passageMapper" />
		<property name="categoryMapper" ref="categoryMapper"/>
		<property name="subCategoryMapper" ref="subCategoryMapper"/>
		<property name="passagePerPage" value="3"/>
	</bean>
	<bean id="categoryController" class="me.paul.yiblog_ssm.controller.CategoryController">
	   	<property name="categoryMapper" ref="categoryMapper"/>
	</bean>
	<bean id="subCategoryController" class="me.paul.yiblog_ssm.controller.SubCategoryController">
	   	<property name="subCategoryMapper" ref="subCategoryMapper"/>
	</bean>
	<bean id="commentController" class="me.paul.yiblog_ssm.controller.CommentController">
	  	<property name="commentMapper" ref="commentMapper"/>
	</bean>
	<bean id="feedbackController" class="me.paul.yiblog_ssm.controller.FeedbackController">
	  	<property name="feedbackMapper" ref="feedbackMapper"/>
	</bean>
	<bean id="replyController" class="me.paul.yiblog_ssm.controller.ReplyController">
	  	<property name="replyMapper" ref="replyMapper"/>
	</bean>
	<bean id="linkController" class="me.paul.yiblog_ssm.controller.LinkController">
	    <property name="linkMapper" ref="linkMapper"></property>
	</bean>
	<bean id="commonController" class="me.paul.yiblog_ssm.controller.CommonController">
		<property name="passageMapper" ref="passageMapper"/>
		<property name="categoryMapper" ref="categoryMapper"/>
		<property name="commentMapper" ref="commentMapper"/>
		<property name="feedbackMapper" ref="feedbackMapper"/>
		<property name="linkMapper" ref="linkMapper"/>
		<property name="multipartResolver" ref="multipartResolver"></property>
		<property name="passagePerPage" value="3"/>
	</bean>
	


</beans>